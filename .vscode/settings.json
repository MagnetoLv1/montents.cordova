{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules/*": true,
        "**/legacy/*": true
    },
    "search.exclude": {
        "**/node_modules/*": true,
        "**/legacy/*": true
    },
    "eslint.format.enable": true,
    "prettier.enable": true,
    "[typescript]": {
      "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": [
      "source.fixAll.eslint"
    ]
}
